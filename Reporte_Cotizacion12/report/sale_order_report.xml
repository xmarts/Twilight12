<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="Sale_cotizacion"
		inherit_id="sale.report_saleorder_document">
		<xpath expr="/t/t/div/div[5]" position="replace">
			<div class="row">
				<div class="col-4" />
				<div class="col-4" />
				<div class="col-4">
					<span style="padding: 70px;">
						<strong style="padding: 20px;">Elaborado por:</strong>
						<br />
					</span>
					<span t-field="user_id.signatureSale" />
				</div>
			</div>
		</xpath>
		<xpath expr="/t/t/div/div[5]" position="after">
			<div class="row">
				<div class="col-6">
					<img src="/Reporte_Cotizacion/static/src/img/banco.png" class="pull-left" style="max-height: 170px;" />
				</div>
				<div class="col-6">
					<img  src="/Reporte_Cotizacion/static/src/img/sello.png" class="pull-right" style="max-height: 150px;" />
				</div>
			</div>
		</xpath>
		<xpath expr="/t/t/div/table/thead/tr/th[1]" position="replace">
			<th>#</th>
		</xpath>
		<xpath expr="/t/t/div/table/thead/tr/th[2]" position="replace">
			<th>No.Catalogo</th>
		</xpath>
		<xpath expr="/t/t/div/table/thead/tr/th[3]" position="replace">
			<th>Cantidad</th>
		</xpath>
		<xpath expr="/t/t/div/table/thead/tr/th[3]" position="after">
			<th>Descripcion</th>
		</xpath>
		<xpath expr="/t/t/div/table/thead/tr/th[4]" position="after">
			<th>Precio</th>
		</xpath>
		<xpath expr="/t/t/div/table/tbody/t[2]/tr/t[1]/td[1]"
			position="before">
			<td>
				<span t-raw="line_index + 1" />
			</td>
		</xpath>
		<xpath expr="/t/t/div/table/tbody/t[2]/tr/t[1]/td[2]"
			position="before">
			<td>
				<span t-field="line.product_id.default_code" />
			</td>
		</xpath>
		<xpath expr="/t/t/div/table/tbody/t[2]/tr/t[1]/td[3]"
			position="replace">
			<td>
				<span t-field="line.product_uom_qty" />
			</td>
		</xpath>
		<xpath expr="/t/t/div/table/tbody/t[2]/tr/t[1]/td[4]"
			position="replace">
			<td>
				<span t-field="line.product_id.name" />
			</td>
		</xpath>
		<xpath expr="/t/t/div/table/tbody/t[2]/tr/t[1]/td[5]"
			position="replace">
			<td>
				<span t-field="line.price_unit" />
			</td>
		</xpath>
		<xpath
			expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[2]/tr[1]/t[1]/td[7]"
			position="replace" />
		<xpath expr="/t[1]/t[1]/div[1]/table[1]/thead[1]/tr[1]/th[7]"
			position="replace" />
		<xpath expr="/t[1]/t[1]/div[1]/table[1]/thead[1]/tr[1]/th[5]"
			position="attributes">
			<attribute name="class" />
		</xpath>
	</template>
</odoo>
