<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <!-- Tree View of Customer-->
     <record id="pedimento_tree_view" model="ir.ui.view">
        <field name="name">pedimento.tree.view</field>
        <field name="model">purchase.order</field>
	<field name="priority">17</field>
        <field name="arch" type="xml">
            <tree string="Informacion de pedimento">
                <field name="name"/>

            </tree>
        </field>
    </record>


    <!--   Define custom action -->

    <record id="custom_action" model="ir.actions.act_window">
        <field name="name">pedimentos</field>
        <field name="res_model">purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
            <field name="view_id" ref="pedimento_tree_view" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a new Pedimiento !
            </p>

        </field>
    </record>
    <!--    -->
    <menuitem name="Pedimiento" id="custom_top_menu_pedimiento" parent="purchase.menu_purchase_control" action="custom_action" sequence="6"/>

    
	
</odoo>
