<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="add_stock_location_id_res_config_settings_view"
			model="ir.ui.view">
			<field name="name">add.stock.location.res.config.setting</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="account.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<div data-key="stock" position="inside">
					<h2>Show Available qty on Sale Order line Based on Location</h2>
					<div class="row mt16 o_settings_container" id="journal_entries_setting">
						<div class="col-xs-12 col-md-6 o_setting_box">
							<div class="o_setting_left_pane">

							</div>
							<div class="o_setting_right_pane">
								<field name="stock_location_id" />

								<span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
									groups="base.group_multi_company" />
								<div class="text-muted">
									Stock Location
								</div>
							</div>
						</div>
					</div>
				</div>
			</field>
		</record>
	</data>
</odoo>
