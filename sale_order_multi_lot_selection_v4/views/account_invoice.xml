<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="added_multi_selection_lot_ids_in_account_invoice_line_tree_view" model="ir.ui.view">
		<field name="model">account.invoice</field>
		<field name="inherit_id" ref="account.invoice_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
				position="after">
				<field name="lot_ids" widget="many2many_tags" domain="[('product_id','=',product_id),('product_qty','&gt;',0)]" context="{'default_product_id': product_id,'tree_view_ref':'sale_order_multi_lot_selection_vts.stock_production_lot_tree_from_sale_order'}" groups="stock.group_production_lot"/>
			</xpath>
		</field>
	</record>
	</odoo>