<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_product_hyperlink_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_total']" position="after">
                <field name="product_link" widget ="url" readonly="1" style="width: 100px;"/>
                <!-- <button name="open_link" type="object" string="Open Link =>" class="oe_inline oe_link" attrs="{'invisible':[('product_link','=',False)]}"><i class="fa fa-arrow-right"/> Open Link</button> -->
            </xpath>
        </field>
    </record>

</odoo>
