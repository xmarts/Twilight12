<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <menuitem id="adquat_menu_finance_entries_accounting_entries_grouped" name="Grouped Accounting Entries" parent="account.menu_finance_entries"/>

        <record id="adquat_account_move_line_grouped_tree_view" model="ir.ui.view">
            <field name="name">adquat.account.move.line.grouped.tree.view</field>
            <field name="model">adquat.account.move.line.grouped</field>
            <field name="arch" type="xml">
                <tree string="Grouped Journal Items" create="0" edit="0" delete="0">


                    <field name="date"/>
                    <field name="move_id"/>
                    <field name="journal_id"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="partner_id"/>
                    <field name="account_id"/>
                    <field name="analytic_account_id"/>
                    <field name="full_reconcile_id"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="date_maturity"/>

                    <field name="currency_id" invisible="1"/>
                    <field name="payment_id" invisible="1"/>
                    <field name="statement_line_id" invisible="1"/>
                    <field name="tax_line_id" invisible="1"/>
                    <field name="invoice_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="statement_id" invisible="1"/>
                    <field name="user_type_id" invisible="1"/>
                    
                </tree>
            </field>
        </record>

        <record id="adquat_account_move_line_grouped_form_view" model="ir.ui.view">
            <field name="name">adquat.account.move.line.grouped.form.view</field>
            <field name="model">adquat.account.move.line.grouped</field>
            <field name="arch" type="xml">
                <form string="Grouped Journal Items" create="0" edit="0" delete="0">
                    <sheet>
                        <group>
                            <group string="Principal">
                                <field name="date"/>
                                <field name="move_id"/>
                                <field name="journal_id"/>
                                <field name="name"/>
                                <field name="ref"/>
                                <field name="partner_id"/>
                                <field name="account_id"/>
                                <field name="analytic_account_id"/>
                                <field name="full_reconcile_id"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="date_maturity"/>
                            </group>
                            <group string="Others">
                                <field name="currency_id"/>
                                <field name="payment_id"/>
                                <field name="statement_line_id"/>
                                <field name="tax_line_id"/>
                                <field name="invoice_id"/>
                                <field name="company_currency_id"/>
                                <field name="company_id"/>
                                <field name="statement_id"/>
                                <field name="user_type_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="adquat_action_account_moves_grouped" model="ir.actions.act_window">
            <field name="context">{'journal_type':'general'}</field>
            <field name="name">Grouped Journal Items</field>
            <field name="res_model">adquat.account.move.line.grouped</field>
            <field name="view_id" ref="adquat_account_move_line_grouped_tree_view"/>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="adquat_action_account_moves_grouped" id="adquat_menu_action_account_moves_grouped" parent="account.menu_finance_entries_accounting_entries" sequence="2" groups="account.group_account_manager" />

    </data>
</odoo>